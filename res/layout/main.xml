<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent" android:layout_height="wrap_content" android:persistentDrawingCache="all">


<AbsoluteLayout android:id="@+id/AbsoluteLayout01" android:layout_width="wrap_content" android:layout_height="wrap_content"></AbsoluteLayout>

<TextView android:text="@+id/TextView01" android:id="@+id/TextView01" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>

<TableRow android:id="@+id/TableRow01" android:layout_height="wrap_content" android:gravity="center_horizontal" android:layout_width="fill_parent"><TextView android:id="@+id/VolumeText" android:layout_marginTop="10px" android:layout_marginBottom="10px" android:layout_height="fill_parent" android:lines="2" android:maxLines="2" android:minLines="2" android:width="100px" android:text="@string/MediaVolume" android:layout_width="fill_parent" android:layout_gravity="left" android:layout_weight="1"></TextView><SeekBar android:contentDescription="Media Volume" android:id="@+id/VolSeekBar" android:paddingLeft="3px" android:paddingRight="3px" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_gravity="right" android:layout_weight=".25" android:layout_margin="15px"></SeekBar>
</TableRow><TableRow android:id="@+id/TableRow02" android:layout_height="wrap_content" android:layout_margin="10px" android:layout_width="fill_parent" android:layout_gravity="center_horizontal|center" android:gravity="center_horizontal"><Button android:id="@+id/Locationbtn" android:text="@string/GetLocButtonString" android:layout_gravity="left" android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_weight="1"></Button><Button android:id="@+id/Button01" android:layout_width="wrap_content" android:layout_height="wrap_content" android:clickable="true" android:onClick="ButtonClick()" android:saveEnabled="true" android:scrollbarAlwaysDrawHorizontalTrack="true" android:visibility="visible" android:layout_gravity="center" android:text="@string/FindDevices" android:layout_weight="1"></Button><Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/ServButton" android:layout_gravity="right" android:freezesText="false" android:text="@string/StartService" android:layout_weight="1"></Button>
</TableRow>






<ListView android:id="@+id/ListView01" android:layout_width="wrap_content" android:layout_height="wrap_content" android:clickable="true" android:contentDescription="@string/ListName"></ListView>


</LinearLayout>