<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent" android:layout_height="wrap_content" android:persistentDrawingCache="all">


<AbsoluteLayout android:id="@+id/AbsoluteLayout01" android:layout_width="wrap_content" android:layout_height="wrap_content"></AbsoluteLayout>

<TextView android:text="@+id/TextView01" android:id="@+id/TextView01" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>

<TableRow android:id="@+id/TableRow01" android:layout_height="wrap_content" android:layout_width="match_parent" android:gravity="center_horizontal"><TextView android:id="@+id/VolumeText" android:layout_marginTop="10px" android:layout_marginBottom="10px" android:layout_width="wrap_content" android:layout_height="fill_parent" android:lines="2" android:text="Media Volume" android:maxLines="2" android:minLines="2" android:width="100px"></TextView><SeekBar android:layout_height="wrap_content" android:contentDescription="Media Volume" android:id="@+id/VolSeekBar" android:layout_width="match_parent" android:layout_margin="15px" android:paddingLeft="3px" android:paddingRight="3px"></SeekBar>
</TableRow><TableRow android:id="@+id/TableRow02" android:layout_height="wrap_content" android:layout_margin="10px" android:layout_width="fill_parent" android:layout_gravity="center_horizontal|center" android:gravity="center_horizontal"><Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/Locationbtn" android:text="Location" android:layout_gravity="left"></Button><Button android:id="@+id/Button01" android:layout_width="wrap_content" android:layout_height="wrap_content" android:clickable="true" android:onClick="ButtonClick()" android:saveEnabled="true" android:scrollbarAlwaysDrawHorizontalTrack="true" android:visibility="visible" android:text="Find Devices" android:layout_gravity="center"></Button><Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/ServButton" android:text="Service ON" android:layout_gravity="right" android:freezesText="false"></Button></TableRow>






<ListView android:id="@+id/ListView01" android:layout_width="wrap_content" android:layout_height="wrap_content" android:clickable="true" android:contentDescription="@string/ListName"></ListView>


</LinearLayout>